. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=pdns
perl_opt=true
daemon_opt=false
forced_restart=true

pmdaSetup
pmdaInstall
exit 0
