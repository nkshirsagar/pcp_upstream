. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=activemq
perl_opt=true
daemon_opt=false
forced_restart=false

for module in JSON LWP::UserAgent File::Basename
do
    perl -e "use $module" 2>/dev/null 
    if test $? -ne 0
    then
        echo "$module perl module is not installed"
	exit 1
    fi
done

pmdaSetup
pmdaInstall
exit 0
